block content
  -
    var listinglist =[
      { link: '/', img: 'img/img5.png', alt: 'img5', descr: 'Дуб классический', number: '5270/FL'},
      { link: '/', img: 'img/img6.png', alt: 'img6', descr: 'Ломбардия', number: '2348/soft'},
      { link: '/', img: 'img/img7.png', alt: 'img7', descr: 'Crystal Marble', number: '8040/soft'},
      { link: '/', img: 'img/img8.png', alt: 'img8', descr: 'Паладина', number: '357/1'},
